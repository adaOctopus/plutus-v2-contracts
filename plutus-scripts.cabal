library
  hs-source-dirs:      src/project-idea, src/project-idea/tests
  exposed-modules:     EscrowNFT,
                       PTEscrowNFT,
                       NegativeRTimed,
                       PTPioneer
  build-depends:       aeson
                     , base ^>=4.14.1.0
                     , bytestring
                     , containers
                     , data-default
                     , freer-extras
                     , cardano-api
                     , plutus-contract
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-script-utils
                     , plutus-tx-constraints
                     , lens 
                     , cardano-node-emulator
                     , plutus-tx-plugin
                     , plutus-tx
                     , text
                     , serialise
                     , base16-bytestring
                     , plutus-simple-model
                     , QuickCheck
                     , tasty
                     , tasty-quickcheck
                     , cardano-ledger-core
                     , cardano-crypto-class
  default-language:    Haskell2010
  ghc-options:         -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise

